<div class="position-relative">
  <div class="card-category card-large"%>
    <h1><%= @list.name %>&nbsp; &nbsp; </h1>
    <small>
      <%= link_to "#{@list.id}/edit", :method => :get, :title => "Update  #{@list.name}" do %>
        <i class="fas fa-pencil-alt"></i>
      <% end %>
    </small>
    &nbsp;
    <small>

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
<div class="position-relative">
    <h1><%= @list.name %></h1>
  </div>
  <span class="movie-tag"><%= pluralize(@list.movies.size, 'movie') %></span>
</div>
<div class="container mb-5">
  <div class="d-flex justify-content-between my-4">
    <span class="mb-2 d-block"><small><em class="text-muted"><%= "You haven't saved any movies yet!" if @list.movies.empty? %></em></small></span>
    <div>
      <button type="button" class="btn btn-flat" data-toggle="modal" data-target="#new_movie_modal">
        add a movie
      </button>
      <%= link_to 'delete this list', list_path(@list), method: :delete, class: 'btn btn-cancel', data: { confirm: 'Are you sure you want to delete this list?' } %>
    </div>
  </div>

<%= link_to 'Bookmark', new_list_bookmark_path(@list)%>
<% @list.movies.each do |movie|%>
  <%= movie.title %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <br>
      <%= link_to "back to list", '/lists' %>
    </div>
  </div>
</div>
